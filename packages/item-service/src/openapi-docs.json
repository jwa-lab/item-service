{
    "tags": [
        {
            "name": "item-service",
            "description": "An integrated solution for efficiently managing gaming items and tokenizing them on the blockchain",
            "externalDocs": {
                "description": "Item Service tutorial",
                "url": "https://jwa-lab.github.io/platform-docs/docs/tutorial/create-an-item"
            }
        }
    ],
    "paths": {
        "/item-service/item": {
            "post": {
                "tags": ["item-service"],
                "summary": "Create a new item",
                "operationId": "createItem",
                "requestBody": {
                    "description": "Create a new item. The item_id will automatically be assigned by the platform.",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "frozen": {
                                        "type": "boolean"
                                    },
                                    "name": {
                                        "type": "string"
                                    },
                                    "data": {
                                        "type": "object",
                                        "additionalProperties": {
                                            "type": "string"
                                        }
                                    },
                                    "total_quantity": {
                                        "type": "integer",
                                        "minimum": 0,
                                        "example": 10
                                    },
                                    "available_quantity": {
                                        "type": "integer",
                                        "minimum": 0,
                                        "example": 10
                                    }
                                }
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "item_id": {
                                            "type": "integer"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            },
            "put": {
                "tags": ["item-service"],
                "summary": "Update an item",
                "operationId": "updateItem",
                "requestBody": {
                    "description": "Update an existing not frozen item.",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Item"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Item"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/item-service/assign-item": {
            "post": {
                "tags": ["item-service"],
                "summary": "Assign an item instance to a user",
                "operationId": "assignItem",
                "requestBody": {
                    "description": "Assign an item instance to a user.",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "item_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "user_id": {
                                        "type": "string",
                                        "example": "Mr 2"
                                    }
                                }
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "instance_id": {
                                            "type": "integer"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/item-service/item/{item_id}": {
            "get": {
                "tags": ["item-service"],
                "summary": "Get an existing item given its item_id",
                "operationId": "getItem",
                "parameters": [
                    {
                        "name": "item_id",
                        "in": "path",
                        "description": "id of item to retrieve",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "minimum": 1,
                            "example": 167
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Item"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        },
        "/item-service/items": {
            "get": {
                "tags": ["item-service"],
                "summary": "Get an array of items.",
                "operationId": "getItems",
                "parameters": [
                    {
                        "name": "start",
                        "in": "query",
                        "description": "Beginning of the results.",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "minimum": 0,
                            "example": 0
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Max number of results.",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "minimum": 1,
                            "example": 10
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Items"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Item": {
                "type": "object",
                "properties": {
                    "frozen": {
                        "type": "boolean"
                    },
                    "item_id": {
                        "type": "integer",
                        "minimum": 1,
                        "example": 167
                    },
                    "name": {
                        "type": "string"
                    },
                    "data": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "string"
                        }
                    },
                    "total_quantity": {
                        "type": "integer",
                        "minimum": 0,
                        "example": 10
                    },
                    "available_quantity": {
                        "type": "integer",
                        "minimum": 0,
                        "example": 10
                    }
                }
            },
            "Items": {
                "type": "object",
                "properties": {
                    "result": {
                        "type": "array",
                        "example": [
                            {
                                "item_id": 1,
                                "studio_id": "studio_id",
                                "name": "sunt officia",
                                "total_quantity": 10,
                                "available_quantity": 10,
                                "frozen": false,
                                "data": {},
                                "fulltext": " sunt officia"
                            }
                        ]
                    },
                    "pagination": {
                        "type": "object",
                        "example": {
                            "from": 0,
                            "perPage": 10,
                            "to": 10,
                            "total": 1
                        }
                    }
                }
            }
        }
    }
}
